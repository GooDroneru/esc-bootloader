{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Windows)",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "servertype": "openocd",
            "gdbPath": "${workspaceFolder}/../../dependencies/tools/risc/xpack-riscv-none-elf-gcc-15.2.0-1/bin/riscv-none-elf-gdb.exe",
            "objdumpPath": "${workspaceFolder}/../../dependencies/tools/risc/xpack-riscv-none-elf-gcc-15.2.0-1/bin/riscv-none-elf-objdump.exe",
            "toolchainPrefix": "riscv-none-elf",
            "serverpath": "${workspaceFolder}/../../dependencies/tools/openocd/wch-openocd/bin/openocd.exe",
            "svdFile": "${workspaceFolder}/../../dependencies/tools/openocd/CH32V203xx.svd",
            "openOCDPreConfigLaunchCommands": [
                "set mem-inaccessible-by-default off",
                "set architecture riscv:rv32",
                "set remotetimeout unlimited"
            ],
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "configFiles": [
                "${workspaceFolder}/../../dependencies/tools/openocd/wch-openocd/bin/wch-riscv.cfg"
            ]
        },
        {
            "name": "Debug (Linux)",
            "cwd": "${workspaceRoot}",
