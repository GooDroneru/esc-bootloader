            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "servertype": "openocd",
            "gdbPath": "${workspaceFolder}/../../dependencies/tools/risc/xpack-riscv-none-elf-gcc-15.2.0-1/bin/riscv-none-elf-gdb",
            "objdumpPath": "${workspaceFolder}/../../dependencies/tools/risc/xpack-riscv-none-elf-gcc-15.2.0-1/bin/riscv-none-elf-objdump",
            "toolchainPrefix": "riscv-none-elf",
            "serverpath": "${workspaceFolder}/../../dependencies/tools/openocd/wch-openocd/bin/openocd",
            "svdFile": "${workspaceFolder}/../../dependencies/tools/openocd/CH32V203xx.svd",
            "openOCDPreConfigLaunchCommands": [
                "set mem-inaccessible-by-default off",
                "set architecture riscv:rv32",
                "set remotetimeout unlimited"
            ],
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "configFiles": [
                "${workspaceFolder}/../../dependencies/tools/openocd/wch-openocd/bin/wch-riscv.cfg"
            ]
